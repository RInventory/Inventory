<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.user.rinventory.ListBarang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_margin="10dp"
            android:id="@+id/kat1">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bulleticon"
                android:id="@+id/logo1"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori 1"
                android:layout_toRightOf="@+id/logo1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000"
                android:id="@+id/kd1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori 1"
                android:layout_toRightOf="@+id/logo1"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_below="@id/kd1"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:id="@+id/nm1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_margin="10dp"
            android:id="@+id/kat2">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bulleticon"
                android:id="@+id/logo2"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori 1"
                android:layout_toRightOf="@+id/logo2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000"
                android:id="@+id/kd2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori 1"
                android:layout_toRightOf="@+id/logo2"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_below="@id/kd2"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:id="@+id/nm2"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_margin="10dp"
            android:id="@+id/kat3">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bulleticon"
                android:id="@+id/logo3"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori 1"
                android:layout_toRightOf="@+id/logo3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000"
                android:id="@+id/kd3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori 1"
                android:layout_toRightOf="@+id/logo3"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_below="@id/kd3"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:id="@+id/nm3"/>
        </RelativeLayout>



    </LinearLayout>
</ScrollView>
